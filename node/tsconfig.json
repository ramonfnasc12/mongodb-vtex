{
  "compilerOptions": {
    "types": ["node", "jest"],
    "typeRoots": ["node_modules/@types", "node_modules/mongodb/mongo.d.ts"],
    "esModuleInterop": true,
    "target": "es2019",
    "module": "CommonJS",
    "moduleResolution": "node",
    "allowJs": false,
    "allowSyntheticDefaultImports": false,
    "noEmitOnError": false,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true
  },
  "typeAcquisition": {
    "enable": false
  },
  "include": ["global.ts", "./**/*"],
  "exclude": ["node_modules"]
}